
const mongoose = require('mongoose');

const userPointsSchema = new mongoose.Schema({
  user_id: {
    type: mongoose.Schema.Types.ObjectId,
    ref: "User",
    required: true,
  },
  points: {
    type: Number,
    required: true,
    default: 0,
  },
  source: {
    type: String, // e.g. 'payment', 'bonus', 'referral'
    default: "payment",
  },
  payment_id: {
    type: mongoose.Schema.Types.ObjectId,
    ref: "Payment",
  },
  createdAt: {
    type: Date,
    default: Date.now,
  },
});

module.exports= mongoose.model("UserPoints", userPointsSchema);
